@model TicketEditViewModel

<form asp-controller="Ticket" asp-action="Edit" method="post" class="form-control-lg" role="form">

    <div asp-validation-summary="All" class="text-danger"></div>

    <input hidden asp-for="Name" />
    <input hidden asp-for="TicketId" />
    <input hidden asp-for="ProjectId" />
    <input hidden asp-for="Type" />
    <input type="hidden" asp-for="TicketCreated" />

    @*<div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label text-black-50"></label>
        <div class="col-md-5">
            <input class="form-control" asp-for="Name" />
        </div>
    </div>*@

    <div class="form-group">
        <label asp-for="Priority" class="col-md-2 control-label text-black-50"></label>
        <div class="col-md-5">
            <select class="form-control" asp-for="Priority">
                <option>High</option>
                <option>Medium</option>
                <option>Low</option>
            </select>
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="col-md-2 control-label text-black-50"></label>
        <div class="col-md-5">
            <select class="form-control" asp-for="Status">
                <option>Open</option>
                <option>In Work</option>
                <option>Complete</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="col-md-2 control-label text-black-50"></label>
        <div class="col-md-5">
            <textarea class="form-control" asp-for="Description" rows="5" cols="50">@Model.Description</textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <a asp-controller="Ticket" asp-action="TicketDetail" asp-route-id="@Model.TicketId" class="btn btn-dark">Back</a>
            <input type="submit" class="btn btn-primary" value="Edit Ticket" />
        </div>
    </div>
</form>